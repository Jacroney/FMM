VITE_SUPABASE_URL=""
VITE_SUPABASE_ANON_KEY=""
VITE_APP_DEMO_MODE="false"

# Plaid Configuration
# Frontend can use either sandbox or production client ID (both are public-safe)
VITE_PLAID_CLIENT_ID_SANDBOX=""        # Your sandbox client_id from Plaid Dashboard
VITE_PLAID_CLIENT_ID_PRODUCTION=""     # Your production client_id from Plaid Dashboard
VITE_PLAID_ENV="production"            # Default environment: 'sandbox' or 'production'

# IMPORTANT:
# - Client IDs are safe to include in frontend code
# - NEVER add your PLAID_SECRET to frontend .env - it must ONLY be in Supabase Secrets
# - Set secrets via: supabase secrets set PLAID_SECRET_PRODUCTION="your-secret"

# OpenAI API Configuration
VITE_OPENAI_API_KEY=""

# Stripe Configuration
# Frontend publishable key (safe to expose in client-side code)
VITE_STRIPE_PUBLISHABLE_KEY=""

# IMPORTANT:
# - Publishable keys are safe to include in frontend code
# - NEVER add your STRIPE_SECRET_KEY to frontend .env - it must ONLY be in Supabase Secrets
# - Set secrets via: supabase secrets set STRIPE_SECRET_KEY="sk_..."
# - Set secrets via: supabase secrets set STRIPE_WEBHOOK_SECRET="whsec_..."
# - Optional: supabase secrets set STRIPE_PLATFORM_FEE_PERCENTAGE="0"

# Developer Access (comma-separated email addresses)
VITE_DEVELOPER_EMAILS="your-email@example.com"
